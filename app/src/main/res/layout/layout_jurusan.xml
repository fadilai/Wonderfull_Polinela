<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"    android:orientation="vertical"
    tools:context=".activities.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/polinela"
                android:layout_width="74dp"
                android:layout_height="73dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginEnd="2dp"
                android:layout_marginBottom="5dp"
                android:elevation="3dp"
                card_view:cardBackgroundColor="#009688"
                card_view:cardCornerRadius="20dp">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="49dp"
                    android:layout_gravity="center"
                    android:src="@drawable/polinela_logo" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="4dp"
                android:text="Politeknik Negeri Lampung"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="64dp"
            android:layout_height="110dp"
            android:layout_marginTop="16dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/about"
                android:layout_width="74dp"
                android:layout_height="73dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginEnd="2dp"
                android:layout_marginBottom="5dp"
                android:elevation="3dp"
                card_view:cardBackgroundColor="#009688"
                card_view:cardCornerRadius="20dp">

                <ImageView
                    android:layout_width="56dp"
                    android:layout_height="61dp"
                    android:layout_gravity="center"
                    android:src="@drawable/about" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="4dp"
                android:text="About Me"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textSize="12sp" />

        </LinearLayout>


    </LinearLayout>

    <SearchView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/search"
        android:layout_below="@+id/llBanner"
        app:queryHint="Cari disini"
        app:iconifiedByDefault="false"
        android:layout_marginTop="-3dp">

    </SearchView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/ekbis"
                android:layout_width="74dp"
                android:layout_height="73dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginEnd="2dp"
                android:layout_marginBottom="5dp"
                android:elevation="3dp"
                card_view:cardBackgroundColor="#009688"
                card_view:cardCornerRadius="20dp">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="49dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ekbis" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="4dp"
                android:text="Ekonomi Dan Bisnis"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="64dp"
            android:layout_height="110dp"
            android:layout_marginTop="16dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/tektan"
                android:layout_width="74dp"
                android:layout_height="73dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginEnd="2dp"
                android:layout_marginBottom="5dp"
                android:elevation="3dp"
                card_view:cardBackgroundColor="#009688"
                card_view:cardCornerRadius="20dp">

                <ImageView
                    android:layout_width="56dp"
                    android:layout_height="61dp"
                    android:layout_gravity="center"
                    android:src="@drawable/tektan" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="4dp"
                android:text="Teknologi Pertanian"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="64dp"
            android:layout_height="110dp"
            android:layout_marginTop="16dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/ternak"
                android:layout_width="74dp"
                android:layout_height="73dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginEnd="2dp"
                android:layout_marginBottom="5dp"
                android:elevation="3dp"
                card_view:cardBackgroundColor="#009688"
                card_view:cardCornerRadius="20dp">

                <ImageView
                    android:layout_width="56dp"
                    android:layout_height="61dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ternak" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="4dp"
                android:text="Peternakan"
                android:textStyle="bold"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/kebun"
                android:layout_width="74dp"
                android:layout_height="73dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginEnd="2dp"
                android:layout_marginBottom="5dp"
                android:elevation="3dp"
                card_view:cardBackgroundColor="#42A5F5"
                card_view:cardCornerRadius="20dp">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="49dp"
                    android:layout_gravity="center"
                    android:src="@drawable/himabun" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="123dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="4dp"
                android:text="Budidaya Tanaman Perkebunan"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="64dp"
            android:layout_height="110dp"
            android:layout_marginTop="16dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/pangan"
                android:layout_width="74dp"
                android:layout_height="73dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginEnd="2dp"
                android:layout_marginBottom="5dp"
                android:elevation="3dp"
                card_view:cardBackgroundColor="#42A5F5"
                card_view:cardCornerRadius="20dp">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="49dp"
                    android:layout_gravity="center"
                    android:src="@drawable/pangan" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="123dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="4dp"
                android:text="Budidaya Tanaman Pangan"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="64dp"
            android:layout_height="110dp"
            android:layout_marginTop="16dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/pasca"
                android:layout_width="74dp"
                android:layout_height="73dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginEnd="2dp"
                android:layout_marginBottom="5dp"
                android:elevation="3dp"
                card_view:cardBackgroundColor="#42A5F5"
                card_view:cardCornerRadius="20dp">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="49dp"
                    android:layout_gravity="center"
                    android:src="@drawable/polinela_logo_putih" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="4dp"
                android:text="Pascasarjana"
                android:textStyle="bold"
                android:textSize="12sp" />

        </LinearLayout>


    </LinearLayout>





</LinearLayout>